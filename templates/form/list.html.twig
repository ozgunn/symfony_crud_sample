{% extends 'base.html.twig' %}

{% block title %}Hello FormController!{% endblock %}

{% block body %}

{% for message in app.flashes('notice') %}
    <div class="alert alert-info">
        {{ message }}
    </div>
{% endfor %}

<h1>User List</h1>

<table class="table table-stripped">
    <thead>
        <tr>
            <td>ID</td>
            <td>Username</td>
            <td>Email</td>
            <td>Level</td>
            <td>Skills</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.level }}</td>
            <td>
                {% for skill in user.userSkills %}
                    {{ skill.skill }}
                {% endfor %}
            </td>
            <td>
                <a href="{{ path("form.edit", {"id": user.id }) }}">Edit</a>
                <a href="{{ path("form.delete", {"id": user.id }) }}" class="text-danger">Delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>

</table>

<a href="{{ path("form.new") }}" class="btn btn-primary">+ Add User</a>

{% endblock %}